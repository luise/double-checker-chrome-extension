{
  "name": "Wait",
  "version": "0.1",
  "description": "Delay loading of user selected websites.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
      {
          "run_at": "document_start",
          "matches": ["<all_urls>"],
          "css": ["style.css"],
          "js": ["content.js"]
      }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": ["images/breathing-clipart-mindful-breathing.gif"],
  "manifest_version": 2
}
